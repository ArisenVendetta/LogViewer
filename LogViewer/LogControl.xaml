<UserControl x:Class="LogViewer.LogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LogViewer"
             xmlns:converters="clr-namespace:LogViewer.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="1000" Unloaded="LogViewer_Unloaded"
             d:DataContext="{d:DesignInstance Type=local:LogControlViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LogViewer;component/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
            <converters:LogLevelColorConverter x:Key="LogLevelToBrushConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Panel.ZIndex="999">
            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <RowDefinition Height="20"/>
                <RowDefinition />
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition />
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="1" Grid.Column="2" Content="Paused" FontFamily="Consolas" FontSize="10" Foreground="White" Background="Red"
                   VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                   Visibility="{Binding IsPaused, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
        <ListView x:Name="__logList" Grid.Row="0" ItemsSource="{Binding LogEvents, Mode=OneWay}" FontFamily="Consolas" FontSize="12" Margin="5"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  SelectionMode="Extended">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type local:LogEventArgs}">
                    <TextBlock Margin="0" Padding="0">
                        <Run Text="{Binding LogDateTimeFormatted, Mode=OneWay}" Tag="{Binding ID}"/>
                        <Run Text="[" Tag="{Binding ID}"/>
                        <Run Text="{Binding LogHandle, Mode=OneWay}" Foreground="{Binding LogLevel, Converter={StaticResource LogLevelToBrushConverter}}" Tag="{Binding ID}"/>
                        <Run Text="]" Tag="{Binding ID}"/>
                        <Run Text="{Binding LogText, Mode=OneWay}" Foreground="{Binding LogColor, Converter={StaticResource ColorToBrushConverter}}" Tag="{Binding ID}"/>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Lines:" FontFamily="Consolas" FontSize="14" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="5"/>
                <TextBox Grid.Column="1" Text="{Binding LogEvents.Count, Mode=OneWay}" FontFamily="Consolas" FontSize="14" Margin="5" TextWrapping="NoWrap" IsReadOnly="True" IsReadOnlyCaretVisible="False" TextAlignment="Center" VerticalContentAlignment="Center" />
                <Label Grid.Column="2" Content="/" FontFamily="Consolas" FontSize="14" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <TextBox Grid.Column="3" Text="{Binding MaxLogSize}" FontFamily="Consolas" FontSize="14" Margin="5" TextWrapping="NoWrap" IsReadOnly="True" IsReadOnlyCaretVisible="False" TextAlignment="Center" VerticalContentAlignment="Center" />
            </Grid>

            <Grid Grid.Column="1">
                <CheckBox Content="Ignore Case" IsChecked="{Binding LogHandleIgnoreCase}" FontFamily="Consolas" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Content="Filter:" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontFamily="Consolas" FontSize="14" />
                <TextBox Grid.Column="1" Text="{Binding OriginalLogHandleFilter}" FontFamily="Consolas" FontSize="14" Margin="5" TextAlignment="Right" VerticalContentAlignment="Center" />
            </Grid>

            <Button x:Name="__pauseButton" Grid.Column="4" Content="Pause" Style="{StaticResource RoundedButtonStyle}" FontSize="16" PreviewMouseDown="Pause_PreviewMouseDown" Margin="2"/>
            <Button Grid.Column="5" Content="Clear" Style="{StaticResource RoundedButtonStyle}" FontSize="16" PreviewMouseDown="Clear_PreviewMouseDown" Margin="2"/>
        </Grid>
    </Grid>
</UserControl>
