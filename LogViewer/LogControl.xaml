<UserControl x:Class="LogViewer.LogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LogViewer"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" Unloaded="LogViewer_Unloaded"
             d:DataContext="{d:DesignInstance Type=local:LogControlViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LogViewer;component/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="__logBox" Grid.Row="0" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto"
                     Margin="5" FontFamily="Consolas" FontSize="12" IsHitTestVisible="{Binding IsPaused}" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Lines:" FontFamily="Consolas" FontSize="14" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="5"/>
                <TextBox Grid.Column="1" Text="{Binding LogEvents.Count, Mode=OneWay}" FontFamily="Consolas" FontSize="14" Margin="5" TextWrapping="NoWrap" IsReadOnly="True" IsReadOnlyCaretVisible="False" TextAlignment="Center" VerticalContentAlignment="Center" />
                <Label Grid.Column="2" Content="/" FontFamily="Consolas" FontSize="14" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <TextBox Grid.Column="3" Text="{Binding MaxLogSize}" FontFamily="Consolas" FontSize="14" Margin="5" TextWrapping="NoWrap" IsReadOnly="True" IsReadOnlyCaretVisible="False" TextAlignment="Center" VerticalContentAlignment="Center" />
            </Grid>

            <Button Grid.Column="2" Content="Pause" Style="{StaticResource RoundedButtonStyle}" FontSize="16" PreviewMouseDown="Pause_PreviewMouseDown" Margin="2"/>
            <Button Grid.Column="3" Content="Clear" Style="{StaticResource RoundedButtonStyle}" FontSize="16" PreviewMouseDown="Clear_PreviewMouseDown" Margin="2"/>
        </Grid>
    </Grid>
</UserControl>
